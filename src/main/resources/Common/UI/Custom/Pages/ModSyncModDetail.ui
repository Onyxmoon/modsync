$C = "Common.ui";

@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@DangerButtonStyle = TextButtonStyle(
  Default: (Background: #8b3a3a, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #9b4a4a, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #7b2a2a, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SecondaryButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 550, Height: 450);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 20);

  Label #mod_name {
    Text: "";
    Anchor: (Height: 40);
    Style: (
      FontSize: 24,
      TextColor: #ffffff,
      HorizontalAlignment: Center,
      RenderBold: true
    );
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 16); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Source:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #mod_source { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Mod ID:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #mod_id { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Slug:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #mod_slug { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Identifier:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #mod_identifier { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Type:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #mod_type { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group { Anchor: (Height: 12); }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542(0.5);
  }

  Group { Anchor: (Height: 12); }

  Label {
    Text: "INSTALLATION";
    Anchor: (Height: 20);
    Style: (FontSize: 11, TextColor: #4a5568, LetterSpacing: 2);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Status:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #is_installed { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Version:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #installed_version { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "File:"; Anchor: (Width: 120); Style: (FontSize: 13, TextColor: #96a9be); }
    Label #installed_file { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff); }
  }

  Group { FlexWeight: 1; }

  Label #status_message {
    Text: "";
    Anchor: (Height: 24);
    Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Center);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Center;
    Anchor: (Height: 44);

    TextButton #install_btn {
      Text: "Install";
      Anchor: (Width: 90, Height: 36);
      Style: @PrimaryButtonStyle;
    }

    Group { Anchor: (Width: 8); }

    TextButton #upgrade_btn {
      Text: "Upgrade";
      Anchor: (Width: 90, Height: 36);
      Style: @SecondaryButtonStyle;
    }

    Group { Anchor: (Width: 8); }

    TextButton #uninstall_btn {
      Text: "Uninstall";
      Anchor: (Width: 90, Height: 36);
      Style: @SecondaryButtonStyle;
    }

    Group { Anchor: (Width: 8); }

    TextButton #remove_btn {
      Text: "Remove";
      Anchor: (Width: 90, Height: 36);
      Style: @DangerButtonStyle;
    }

    Group { Anchor: (Width: 16); }

    TextButton #back_btn {
      Text: "Back";
      Anchor: (Width: 70, Height: 36);
      Style: @SecondaryButtonStyle;
    }
  }
}

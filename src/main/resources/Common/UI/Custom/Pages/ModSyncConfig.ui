$C = "Common.ui";

@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SecondaryButtonStyle = TextButtonStyle(
  Default: (Background: #2b3542, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3b4552, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1b2532, LabelStyle: (FontSize: 12, TextColor: #96a9be, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@SuccessButtonStyle = TextButtonStyle(
  Default: (Background: #2d6a4f, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3d7a5f, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1d5a3f, LabelStyle: (FontSize: 12, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group {
  Anchor: (Width: 550, Height: 500);
  Background: #141c26(0.98);
  LayoutMode: Top;
  Padding: (Full: 20);

  Group {
    LayoutMode: Left;
    Anchor: (Height: 45);

    Label #title {
      Text: "ModSync Settings";
      Anchor: (Width: 250);
      Style: (
        FontSize: 24,
        TextColor: #ffffff,
        HorizontalAlignment: Left,
        RenderBold: true
      );
    }

    Group { FlexWeight: 1; }

    TextButton #back_btn {
      Text: "Back";
      Anchor: (Width: 70, Height: 32);
      Style: @SecondaryButtonStyle;
    }
  }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542;
  }

  Group { Anchor: (Height: 16); }

  Label {
    Text: "VERSION";
    Anchor: (Height: 18);
    Style: (FontSize: 11, TextColor: #4a5568, LetterSpacing: 2);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 32);

    Label { Text: "Current Version:"; Anchor: (Width: 140); Style: (FontSize: 13, TextColor: #96a9be, VerticalAlignment: Center); }
    Label #version { Text: ""; Anchor: (Width: 80); Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center); }

    Group { Anchor: (Width: 16); }

    Label #update_status { Text: ""; FlexWeight: 1; Style: (FontSize: 12, TextColor: #4a5568, VerticalAlignment: Center); }

    TextButton #check_update_btn {
      Text: "Check";
      Anchor: (Width: 70, Height: 28);
      Style: @SecondaryButtonStyle;
    }

    Group { Anchor: (Width: 8); }

    TextButton #upgrade_btn {
      Text: "Upgrade";
      Anchor: (Width: 80, Height: 28);
      Style: @SuccessButtonStyle;
    }
  }

  Group { Anchor: (Height: 16); }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542(0.5);
  }

  Group { Anchor: (Height: 16); }

  Label {
    Text: "CONFIGURATION";
    Anchor: (Height: 18);
    Style: (FontSize: 11, TextColor: #4a5568, LetterSpacing: 2);
  }

  Group { Anchor: (Height: 8); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Update Mode:"; Anchor: (Width: 140); Style: (FontSize: 13, TextColor: #96a9be, VerticalAlignment: Center); }
    Label #update_mode { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center); }
  }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 28);

    Label { Text: "Release Channel:"; Anchor: (Width: 140); Style: (FontSize: 13, TextColor: #96a9be, VerticalAlignment: Center); }
    Label #default_channel { Text: ""; FlexWeight: 1; Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center); }
  }

  Group { Anchor: (Height: 16); }

  Group {
    Anchor: (Height: 1);
    Background: #2b3542(0.5);
  }

  Group { Anchor: (Height: 16); }

  Label {
    Text: "API KEYS";
    Anchor: (Height: 18);
    Style: (FontSize: 11, TextColor: #4a5568, LetterSpacing: 2);
  }

  Group { Anchor: (Height: 8); }

  Group #providers_container {
    FlexWeight: 1;
    LayoutMode: Top;
    Background: #1a2332;
    Padding: (Full: 8);
  }

  Group { Anchor: (Height: 12); }

  Group {
    LayoutMode: Left;
    Anchor: (Height: 40);

    TextButton #reload_btn {
      Text: "Reload Config";
      Anchor: (Width: 120, Height: 34);
      Style: @SecondaryButtonStyle;
    }

    Group { FlexWeight: 1; }

    Label #status_message {
      Text: "";
      FlexWeight: 1;
      Style: (FontSize: 12, TextColor: #96a9be, HorizontalAlignment: Right, VerticalAlignment: Center);
    }
  }
}
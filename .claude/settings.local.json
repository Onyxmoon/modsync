{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:docs.curseforge.com)",
      "WebFetch(domain:support.curseforge.com)",
      "WebFetch(domain:hytale-docs.com)",
      "WebFetch(domain:britakee-studios.gitbook.io)",
      "WebFetch(domain:hytalemodding.dev)",
      "WebFetch(domain:hytale-docs.pages.dev)",
      "Bash(unzip:*)",
      "mcp__ide__getDiagnostics",
      "WebFetch(domain:cfwidget.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"%CLAUDE_PROJECT_DIR%/.claude/hooks/post-tool-call.py\""
          }
        ]
      }
    ]
  }
}